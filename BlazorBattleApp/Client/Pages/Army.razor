@page "/army"
@inject BlazorBattleApp.Client.Services.IUnitService UnitService

<h3>Army</h3>

@foreach (var userUnit in UnitService.MyUnits)
{
    <div class="army-list">
        <div>
            @switch (userUnit.UnitId)
                {
                    case 1: <img src="incons/W_Sword006.png" /> break;
                    case 2: <img src="incons/S_Bow08.png" /> break;
                    case 3: <img src="incons/C_Hat01.png" /> break;
                }
        </div>
        <div>
            @UnitService.Units.First(unit => unit.Id == userUnit.UnitId).Title
        </div>
        <div>
            @userUnit.HitPoints HP
        </div>
    </div>
}

